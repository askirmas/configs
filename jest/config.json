{
  "clearMocks": false,
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[tj]sx?$",
  "verbose": true,
  "bail": 1,
  "testEnvironment": "node",
  "projects": [
    {
      "displayName": "functions",
      "preset": "ts-jest",
      "collectCoverageFrom": [
        "<rootDir>"
      ],
      "rootDir": "functions",
      "transform": {
        "^.+\\.[tj]sx?$": "ts-jest"
      }    
    }
  ]
}
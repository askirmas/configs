{
  "clearMocks": false,
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[tj]sx?$",
  "verbose": true,
  "bail": 1,
  "testEnvironment": "node",
  "projects": [
    {
      "displayName": "functions",
      "preset": "ts-jest",
      "collectCoverageFrom": [
        "<rootDir>"
      ],
      "rootDir": "functions",
      "transform": {
        "^.+\\.[tj]sx?$": "ts-jest"
      }    
    },
    {
      "displayName": "server",
      "rootDir": "server",
      "preset": "ts-jest",
      "collectCoverageFrom": [
        "<rootDir>"
      ],
      "transform": {
        "^.+\\.[tj]sx?$": "ts-jest"
      },
      "testEnvironment": "node"
    },
    {
      "displayName": "db@memory",
      "rootDir": "db",
      "transform": {
        "^.+\\.[tj]sx?$": "ts-jest"
      },    
      "globals": {
        "ts-jest": {
          "tsConfig": "db/tsconfig.json"
        }
      },
      "preset": "@shelf/jest-mongodb"
    },
    {
      "displayName": "db@local",
      "rootDir": "db",
      "transform": {
        "^.+\\.[tj]sx?$": "ts-jest"
      },    
      "globals": {
        "ts-jest": {
          "tsConfig": "db/tsconfig.json"
        }
      },
      "testEnvironment": "node"    
    }    
  ]
}
{
  "name": "@kirmas/configs",
  "version": "0.1.1",
  "private": true,
  "description": "My configs for reuse",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/askirmas/configs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/askirmas/configs/issues"
  },
  "homepage": "https://github.com/askirmas/configs#readme",
  "files": [],
  "scripts": {
    "modules.clear": "find * -type d -iname node_modules | xargs -d'\n' -I{} rm -rf {}",
    "compile/cypress": "cd cypress && npm run compile",
    "release:product": "np $(git-hooks-wrapper semver_inc product)",
    "release:feature": "np $(git-hooks-wrapper semver_inc feature)",
    "release:hotfix": "np $(git-hooks-wrapper semver_inc hotfix)",
    "release": "np",
    "postrelease": "npm update && npm update -D",
    "prestart": "git config include.path ../.gitconfig",
    "pretest": "jest --clearCache",
    "test": "exit 0",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --fix --quiet",
    "lint:css": "stylelint **/*.scss **/*.css --fix --quiet",
    "doc": "mdmerge --version || pip3 install MarkdownTools && mdmerge -o README.md README.template.md",
    "spec:clean": "git clean -fd cypress/**/*.png",
    "postspec": "nyc report",
    "-preversion": "./preversion.sh",
    "-postversion": "git push && git push --tags && git switch master && git merge -X theirs release --no-edit && git push && npm update --dd",
    "mongodb.start": "mongodb start",
    "mongodb.stop": "mongodb stop",
    "mongodb.restart": "mongodb restart"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@kirmas/contracts": "file:contracts",
    "@kirmas/mongodb": "file:mongodb",
    "@kirmas/mongoose": "file:mongoose",
    "@kirmas/nextjs": "file:nextjs",
    "@mysticatea/eslint-plugin": "^13.0.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.1.0"
  },
  "devDependencies": {},
  "peerDependencies": {}
}
